<script>

    var urlGetLogin = '@Url.Action("Get", "Login")';

    $("#btnSubmitLogin").click(function () {

        $('.toast').remove();

        if (!$("#txtEmail").val()) {
            Materialize.toast('<span>Favor preencher o campo E-mail</span>', 10000, "red");
            return false;
        }

        if (!$("#txtSenha").val()) {
            Materialize.toast('<span>Favor preencher o campo Senha</span>', 10000, "red");
            return false;
        }

        return true;
    });

    function criarConta() {

        $("#formLogin")[0].reset();
        $("#divErrorLogin").empty();

        $("#mainLogin").hide(function () {
            $("#mainNovaConta").show();
        });
    }

</script>