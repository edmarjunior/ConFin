<div class="fixed-action-btn horizontal click-to-toggle">
    <a href="javascript:void(0)" onclick="showModalConta()" class="waves-effect waves-light modal-trigger btn-floating btn-large">
        <i class="material-icons">add</i>
    </a>
</div>

<script>

    var urlModalConta = '@Url.Action("GetModalCadastroEdicao", "ContaFinanceira")';

    function showModalConta() {
        $.get(urlModalConta).success(function(data) {
            $("#containerPrincipal").append(data);
            $('.modal').modal();
            $("#modalContaCadastroEdicao").modal("open");
        });
    }


    function deleteConta() {
        showModalConfirm("Deseja realmente excluir esta conta?", function() {
            alert("Confirmado");
        });
    }

